<?xml version="1.0" encoding="UTF-8"?>
<!-- Configures the Camel Context -->

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:amq="http://activemq.apache.org/schema/core"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd">

	<bean id="employee" class="com.bizruntime.camelxpath.employee.EmployeeBean" />
	<camelContext xmlns="http://camel.apache.org/schema/spring">
		<route>
			<from uri="file:/home/noorshid/Desktop/source?noop=true"/>
			<setHeader headerName="employee">
				<xpath resultType="String">/emp/name/text()</xpath>
			</setHeader>
			<log message="---->${body}"/>
			<to uri="bean:employee?method=processEmployee"/>
		</route>
	</camelContext>
</beans>
